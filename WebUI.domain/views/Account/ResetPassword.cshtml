@model WebUI.domain.Models.Password.ResetPasswordViewModel

@{ ViewData["Title"] = "Password-Reset-Form"; }

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/css/Register.css" />
</head>

<body>
    <form method="post" class="form">
        <div asp-validation-summary="ModelOnly"></div>
        <h1>Registration Form</h1>
        <div asp-validation-summary="All"></div>
        <div class="form-group col-xl-4">
            <input asp-for="Email" type="hidden" />
            <input asp-for="Token" type="hidden" />
        </div>
        <div class="form-group col-xl-4">
            <label asp-for="Password">Enter First Name:</label>
            <input asp-for="Password" onfocus="OnFocus" class="form-control" name="" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group col-xl-4">
            <label asp-for="ConfirmPassword">Enter Last Name:</label>
            <input asp-for="ConfirmPassword" class="form-control" name="" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div>
            <button type="submit" class="btn-primary">Reset Password</button>
        </div>
    </form>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



