@model IEnumerable<OnlineBanking.Domain.Entities.User>
@{ 
    ViewData["Title"] = "Admin-Home-Page";
    Layout = "_LayoutDashboard";
}


<html>
    <head></head>
<body>
    <div>
        <div>
            <h3>All Users</h3>
        </div>
        <table class="table table-sm table-bordered">
            <tr>
                <th>UserName</th>
                <th>Email</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>

            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>

                    <td> <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary">Update</a></td>
                    <td>
                        <form method="post" asp-action="Delete" asp-route-id="@user.Id">
                            <button onclick="return confirm('Are You sure you want to delete this user')"
                                    type="submit" class=" btn btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </table>
    </div>

</body>

</html>

