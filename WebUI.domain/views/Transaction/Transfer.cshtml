@model WebUI.domain.Models.TransactionModel.TransferViewModel

@{
    ViewBag.Title = "Customer-Transfer-Dashboard";
    Layout = "_LayoutDashboard";
}

<section class="templatemo-bg-image-1">
    <div class="container">
        <div class="col-md-12">
            <form class="form-horizontal templatemo-login-form-2" method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="row">
                    <div class="col-md-12">
                        <h1>Transfer Money</h1>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="templatemo-one-signin col-md-6">
                        <div class="form-group col-xl-4 ">
                            <div>
                                <label asp-for="Amount" class="control-label">Amount</label>
                                <div class="templatemo-input-icon-container">
                                    <i class="fa fa-user"></i>
                                    <input type="text" class="form-control" asp-for="Amount" placeholder="">
                                    <span asp-validation-for="Amount" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <label asp-for="ReciepientAccountNumber" class="control-label">Reciepient Account Number</label>
                                <div class="templatemo-input-icon-container">
                                    <i class="fa fa-lock"></i>
                                    <input type="text" class="form-control" asp-for="ReciepientAccountNumber" placeholder="">
                                    <span asp-validation-for="ReciepientAccountNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div>
                    <button type="submit" class="btn btn-primary text-center">Transfer</button>
                    <a class="btn btn-primary" asp-action="CustomerHome" asp-controller="Dashboard" role="button">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</section>
